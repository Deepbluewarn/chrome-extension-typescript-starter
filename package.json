{
  "name": "twitch-badge-collector-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:firefox && npm run build:chromium",
    "build:firefox": "tsc && cross-env VITE_BUILD_FOR=firefox vite build",
    "build:chromium": "tsc && cross-env VITE_BUILD_FOR=chromium vite build",
    "watch:chromium": "tsc && cross-env VITE_BUILD_FOR=chromium vite build --watch --mode dev",
    "watch:firefox": "tsc && cross-env VITE_BUILD_FOR=firefox vite build --watch --mode dev",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.14.1",
    "@mui/material": "^5.14.1",
    "@mui/x-data-grid": "^6.10.0",
    "@sentry/browser": "^7.91.0",
    "@sentry/types": "^7.91.0",
    "@sentry/vite-plugin": "^2.10.2",
    "@tanstack/react-query": "^4.29.25",
    "axios": "^1.4.0",
    "broadcast-channel": "^5.2.0",
    "firebase": "^10.1.0",
    "html-to-image": "^1.11.11",
    "i18next": "^23.2.11",
    "i18next-browser-languagedetector": "^7.1.0",
    "nanoid": "4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-from-dom": "^0.6.2",
    "react-ga4": "^2.1.0",
    "react-i18next": "^13.0.2",
    "react-router-dom": "^6.14.2",
    "twitch-badge-collector-cc": "^1.6.5"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.18",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/tmi.js": "^1.8.3",
    "@types/webextension-polyfill": "^0.10.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.3.3",
    "vite": "^4.4.7",
    "vite-plugin-static-copy": "^0.17.0",
    "vite-plugin-zip-pack": "^1.0.6",
    "webextension-polyfill": "^0.10.0"
  }
}
