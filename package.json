{
  "name": "chrome-extension-typescript-starter",
  "version": "1.0.0",
  "description": "chrome-extension-typescript-starter",
  "main": "index.js",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build-ff": "cross-env BUILD_FOR=firefox webpack --config webpack/webpack.prod.js && cross-env BUILD_FOR=firefox node ./archiver/build.js",
    "build-ch": "cross-env BUILD_FOR=chromium webpack --config webpack/webpack.prod.js && cross-env BUILD_FOR=chromium node ./archiver/build.js",
    "build": "npm run build-ff && npm run build-ch",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
