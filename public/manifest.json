{
    "manifest_version": 3,
    "name": "Twitch Badge Collector V2",
    "description": "Collect chats you want!",
    "version": "1.0.0",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "js/vendor.js",
                "js/twitch_content_script.js"
            ],
            "css": [
                "css/main/index.css"
            ]
        },
        {
            "matches": [
                "https://badgecollector.dev/setting/filter*"
              ],
              "js": [
                "js/vendor.js",
                "js/filter_content_script.js"
              ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.twitch.tv/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/overrideFetch.js"
            ],
            "matches": [
                "*://*.twitch.tv/*"
            ]
        }
    ]
}