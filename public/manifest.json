{
    "manifest_version": 3,
    "name": "__MSG_ExtensionName__",
    "description": "__MSG_ExtensionDesc__",
    "default_locale": "en",
    "version": "2.2.11",
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "all_frames" : true,
            "js": [
                "js/vendor.js",
                "js/twitch_content_script.js"
            ],
            "css": [
                "css/main/index.css"
            ]
        },
        {
            "matches": [
                "https://*.badgecollector.dev/mini*",
                "https://*.badgecollector.dev/replay*"
            ],
            "all_frames": true,
            "js": [
                "js/vendor.js",
                "js/remote_content_script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "storage",
        "webNavigation"
    ],
    "host_permissions": [
        "*://*.twitch.tv/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/overrideFetch.js",
                "icon.png"
            ],
            "matches": [
                "*://*.twitch.tv/*"
            ]
        }
    ]
}